doctype html
head
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  title 404
  meta(content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport')
  include includes/styles
.page-not-found
  .wrapper.not-found
    h1.animated.fadeIn=error.status
    .desc.animated.fadeIn
      span OOPS!
      br
      | #{message}
    a.btn.btn-primary.btn-back-home.mt-4.animated.fadeInUp(href='/')
      span.btn-label.mr-2
        i.flaticon-home
      | &#x9;&#x9;&#x9;Back To Home
include includes/script


